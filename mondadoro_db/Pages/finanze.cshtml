@page
@model mondadoro_db.Pages.FinanzeModel
@{

    double balance;
    StreamReader sr = new StreamReader("./Pages/Shared/balance.txt");
    balance = Convert.ToDouble(sr.ReadLine());
    sr.Close();
}

<h1>Area Finanze</h1>
<h5>In questa pagina e' possibile vedere una stima del bilancio corrente in base alle vendite effettuate recentemente.</h5>

<hr />

<div class="text-center">
    <div class="row mt-5 pt-5 storage-page">
        <div class="col-6">
            <h3 class="mt-5 fw-400">Il bilancio corrente <strong>stimato</strong> ammonta a: 
                @if(balance > 0)
                {
                    <strong style="color: green">@balance €</strong>
                }
                else if(balance < 0)
                {
                    <strong style="color: red">@balance €</strong>
                }
                else
                {
                    <strong>@balance €</strong>
                }
            <br />
        </div>
    </div>
</div>