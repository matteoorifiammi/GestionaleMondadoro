@page
@model mondadoro_db.Pages.Items.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Creazione Prodotto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Item.Name" class="control-label"></label>*@
                <label class="control-label">Nome del Prodotto</label>
                <input asp-for="Item.Name" class="form-control" />
                <span asp-validation-for="Item.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Item.Category" class="control-label"></label>*@
                <label class="control-label">Categoria</label>
                <input asp-for="Item.Category" class="form-control" />
                <span asp-validation-for="Item.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Item.ListPrice" class="control-label"></label>*@
                <label class="control-label">Prezzo di Listino</label>
                <input asp-for="Item.ListPrice" class="form-control" />
                <span asp-validation-for="Item.ListPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Item.SellingPrice" class="control-label"></label>*@
                <label class="control-label">Prezzo di Vendita</label>
                <input asp-for="Item.SellingPrice" class="form-control" />
                <span asp-validation-for="Item.SellingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Item.Quantity" class="control-label"></label>*@
                <label class="control-label">Quantita'</label>
                <input asp-for="Item.Quantity" class="form-control" />
                <span asp-validation-for="Item.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Item.ProductCode" class="control-label"></label>*@
                <label class="control-label">Codice Prodotto</label>
                <input asp-for="Item.ProductCode" class="form-control" />
                <span asp-validation-for="Item.ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Crea" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Torna Indietro</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
