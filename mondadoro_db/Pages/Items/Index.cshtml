<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].ListPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].SellingPrice)
            </th>
            <th>
